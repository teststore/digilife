{% extends '::base.html.twig' %}

{% block title %}Edit categories{% endblock %}

{% block body %}
    <h1>Categories list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa categorii</th>
                <th>Parent category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_categories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.categoryName }}</td>
                <td>{{ entity.parentCategory }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_categories_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_categories_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_categories_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
